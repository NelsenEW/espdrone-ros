<?xml version="1.0"?>
<launch>

  <arg name="drone_name" default="espdrone_107"/>
  <!-- <arg name="waypoints_list" default="[[0.15, 0, 0.8, 0, 6], [0.15, 1.4, 0.8, 0, 3], [0.15, 1.4, 0.8, 90, 5], [0.15, 1.4, 0.8, 0, 3], [0.15, 0, 0.8, 0, 3], [0.15, -1.4, 0.8, 0, 3], [0.15, -1.4, 0.8, -90, 5], [0.15, -1.4, 0.8, 0, 3], [0, 0, 0.3, 0, 3]]"/> -->
  <arg name="waypoints_list" default="[[0.15, 0, 1.2, 0, 6], [0.15, 0, 1.2, 90, 5], [0.15, 0, 1.2, -90, 5], [0.15, 0, 1.2, 0, 5]]"/>
  <arg name="transition_duration" default="10.0"/>
  <arg name="goal_threshold" default="0.10"/>

  <node pkg="espdrone_utils" type="send_waypoints.py" name="waypoint_sender" output="screen" launch-prefix="xterm -T $(arg drone_name)_waypoint -fa 'Monospace' -fs 12 -e">
    <param name="drone_name" type="string" value="$(arg drone_name)"/>
    <param name="waypoints_list" type="string" value="$(arg waypoints_list)"/>
    <param name="transition_duration" type="double" value="$(arg transition_duration)"/>
    <param name="goal_threshold" type="double" value="$(arg goal_threshold)"/>
  </node>

</launch>